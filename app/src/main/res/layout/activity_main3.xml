<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.kth.csc.iprog.dinnerplanner.android.Main3Activity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchEdit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/searchQueryButton"
        android:layout_toStartOf="@+id/searchQueryButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchQueryButton"
        android:layout_alignTop="@+id/searchEdit"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/gridViewSearch"
        android:numColumns="3"
        android:layout_weight="5"
        android:fastScrollEnabled="false"
        android:smoothScrollbar="false"
        android:layout_below="@+id/searchQueryButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
